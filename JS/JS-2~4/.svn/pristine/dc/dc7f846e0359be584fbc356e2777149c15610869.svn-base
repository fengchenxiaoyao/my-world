@charset "UTF-8";
/* CSS重置样式表 */
body,
html,
div,
blockquote,
img,
label,
p,
h1,
h2,
h3,
h4,
h5,
h6,
pre,
ul,
ol,
li,
dl,
dt,
dd,
form,
a,
fieldset,
input,
th,
td {
    margin: 0;
    padding: 0;
    border: 0;
    outline: none;
}
/* 全局依赖样式 */
html {
    font-size: 62.5%;
}

body {
    min-width: 320px;
    max-width: 768px;
    margin: 0 auto;
    line-height: 1.5;
    font-size: 14px;
    /* Decide for yourself if you want to include this. */
    font-family: "Microsoft YaHei", sans-serif;
    background: #fff;
}

img {
    display: block;
    max-width: 100%;
    height: auto;
    border: 0 none;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    font-size: 100%;
    padding: .6em 0;
    margin: 0 15px;
}

ul,
ol {
    list-style: none;
}

a {
    color: #9a9a9a;
    text-decoration: none;
}

input,
select,
textarea,
button {
    vertical-align: middle;
}

button {
    border: 0 none;
    background-color: transparent;
    cursor: pointer;
}

a:active,
a:hover {
    text-decoration: none;
}

.floatLeft {
    float: left;
    padding: .5em .5em .5em 0;
}

.floatRight {
    float: right;
    padding: .5em 0 .5em .5em;
}

.clearfix:before,
.clearfix:after {
    content: '';
    display: table;
}

.clearfix:after {
    clear: both;
}
